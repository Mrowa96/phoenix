---
import Container from './Container.astro';
import Avatar from './Avatar.astro';
---

<Container>
  <section id="introduction">
    <div class="text-wrapper">
      <p class="text">Hi! Hola! Cześć!</p>
      <h1 class="heading-text">My name is Paweł Mrowiec.</h1>
      <h2 class="heading-text">I'm programmer passionate about Web technologies.</h2>
    </div>

    <Avatar />
  </section>
</Container>

<style>
  #introduction {
    display: flex;
    flex-flow: column-reverse;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;

    @media (--above-medium-viewport) {
      flex-flow: row;
      gap: 1rem;
      min-height: 50vh;
    }

    & .text-wrapper {
      text-align: center;

      @media (--above-medium-viewport) {
        text-align: initial;
      }

      & .text {
        font-size: 1.1rem;
        font-weight: 400;
        margin: 1rem 0;
      }

      & .heading-text {
        margin: 1rem 0;
        font-size: 1.3rem;
        font-weight: 500;

        @media (--above-medium-viewport) {
          font-size: 1.5rem;
        }
      }
    }
  }
</style>
