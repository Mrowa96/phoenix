---
type Props = {
  class?: string;
  slidesGap?: string;
};

const { slidesGap, class: className } = Astro.props;
---

<ul class:list={['slider', className]}>
  <slot />
</ul>

<style
  define:vars={{
    'slides-gap': slidesGap,
  }}
>
  .slider {
    position: relative;
    display: flex;
    gap: var(--slides-gap);
    padding: 0;
    width: 100%;
    scroll-snap-type: x mandatory;
    overscroll-behavior-x: none;
    overflow-x: auto;
  }
</style>
