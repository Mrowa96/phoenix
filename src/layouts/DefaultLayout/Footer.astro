---
import Container from '../../components/Container.astro';

export type Props = {
  background?: 'primary-dark' | 'secondary-dark' | undefined;
};

const { background } = Astro.props;
---

<footer id="main-footer">
  <Container>
    <span class="copyright">
      Copyright © {new Date().getFullYear()} by Paweł Mrowiec.
    </span>
    <span class="goodbye">Do zobaczenia!</span>
  </Container>
</footer>

<style
  define:vars={{
    'footer-background': `var(--c-${background ?? 'grey-100'})`,
    'footer-color': `var(--c-${background ? 'white' : 'black'})`,
  }}
>
  #main-footer {
    background: var(--footer-background);
    color: var(--footer-color);
    font-size: 1rem;
    font-weight: 500;
    text-align: center;
    padding: 0.5rem 0;

    & .copyright,
    & .goodbye {
      display: block;

      @media (--above-medium-viewport) {
        display: inline;
      }
    }
  }
</style>
