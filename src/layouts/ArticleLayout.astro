---
import DefaultLayout from './DefaultLayout/DefaultLayout.astro';
import Container from '../components/Container.astro';
import 'prismjs/themes/prism-tomorrow.min.css';

type Props = {
  title: string;
  lead: string;
};

const { title, lead } = Astro.props;
---

<DefaultLayout title={`Articles - ${title}`} meta={{ twitter: { title, description: lead } }}>
  <Container type="narrow">
    <article class="article-content">
      <slot />
    </article>
  </Container>
</DefaultLayout>

<style is:global>
  .article-content {
    --c-title-border-color: var(--c-grey-300);
    --c-content-code-background: var(--c-grey-200);

    color: var(--c-black);
    padding: 2rem 0;
    line-height: var(--increased-line-height);

    & p {
      font-weight: 400;
      margin: 1rem 0;
    }

    & strong {
      font-weight: 500;
    }

    & h1,
    & h2,
    & h3,
    & h4,
    & h5,
    & h6 {
      font-weight: 500;
      margin: 1rem 0;
    }

    & h1 {
      font-size: 1.8rem;
    }

    & ul,
    & ol {
      margin: 1rem 0;

      & li {
        margin: 0 0 0.4rem;
        padding: 0.2rem;
      }
    }

    & a {
      color: var(--c-black);
      text-underline-offset: 2px;
    }

    & pre[class*='language-'] {
      margin: 1rem 0;
      border-radius: var(--default-border-radius);
    }

    & code:not([class*='language-']) {
      font-family: 'Quicksand', monospace;
      font-weight: 500;
    }
  }
</style>
